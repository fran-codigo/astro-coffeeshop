---
interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<div class="bg-linear-to-br from-coffee-900 to-coffee-800 p-6 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 border border-coffee-700">
    <h4 class="text-xl font-bold text-coffee-100 mb-3">{title}</h4>
    <div set:html={content} class="text-coffee-50 text-lg leading-relaxed" />
</div>

---
import { Picture } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import { ProcessWPSchema } from "@/types/index.ts";

const url = "http://localhost:3000/wp-json/wp/v2/pages?slug=proceso";
const res = await fetch(url);
const json = await res.json();
const data = ProcessWPSchema.parse(json[0]);
console.log(data)
---

<Layout
  title={data.title.rendered}
  subtitle={data.acf.subtitle}
  bgImage={data.featured_images.full.url}
>
  <div
    set:html={data.content.rendered}
    class="text-xl space-y-3 mt-10 lg:mt-0"
  />
</Layout>
